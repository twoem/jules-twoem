<%- include('../partials/header', { title: 'Admin Login', page_styles: [{cssText: "body { background-image: url('/images/backgrounds/login-bg.jpg'); background-size: cover; background-position: center; background-attachment: fixed; }"}] }) %>
<%- include('../partials/navbar') %>

<main class="container mt-5 d-flex align-items-center justify-content-center flex-grow-1"> <%# Added flex-grow-1 to main %>
    <div class="row justify-content-center w-100"> <%# Added w-100 to row for better centering if card is not full width %>
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Admin Login</h2>
                    <!-- Placeholder for login messages -->
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <form action="/admin/login" method="POST"> <!-- Action URL will be handled by admin routes later -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email or Admin ID</label>
                            <input type="text" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                    <!-- Optional: Add a "Forgot Password?" link here later if needed for admins -->
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
