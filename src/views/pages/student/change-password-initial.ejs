<%- include('../../partials/header', { title: 'Change Your Password' }) %>
<%- include('../../partials/navbar') %>

<main class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Change Your Initial Password</h4>
                </div>
                <div class="card-body">
                    <p>Welcome! As this is your first time logging in, you must change your password before proceeding.</p>

                    <% if (locals.error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <% if (locals.errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% errors.forEach(function(error) { %>
                                    <li><%= error.msg || error %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                    <form action="/student/change-password-initial" method="POST">
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Current Default Password</label>
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                            <div class="form-text">This is the default password assigned to you: <strong><%= process.env.DEFAULT_STUDENT_PASSWORD %></strong></div>
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="<%= process.env.PASSWORD_MIN_LENGTH || 8 %>">
                            <div class="form-text">Minimum <%= process.env.PASSWORD_MIN_LENGTH || 8 %> characters.</div>
                        </div>
                        <div class="mb-3">
                            <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Set New Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../../partials/footer') %>
