<%- include('../../partials/header', { title: 'Reset Your Password' }) %>
<%- include('../../partials/navbar') %>

<main class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Reset Your Password</h4>
                </div>
                <div class="card-body">
                    <% if (locals.message) { %>
                        <div class="alert alert-info"><%= message %></div>
                    <% } %>
                    <% if (locals.error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>

                    <p>An OTP has been sent to your registered email address. Please enter it below along with your new password.</p>

                    <form action="/student/reset-password" method="POST">
                        <input type="hidden" name="registrationNumber" value="<%= locals.registrationNumber || '' %>">

                        <div class="mb-3">
                            <label for="otp" class="form-label">One-Time Password (OTP)</label>
                            <input type="text" class="form-control" id="otp" name="otp" required inputmode="numeric" pattern="\d{6}" title="Enter 6-digit OTP">
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="<%= locals.passwordMinLength || 8 %>">
                            <div class="form-text">Minimum <%= locals.passwordMinLength || 8 %> characters.</div>
                        </div>
                        <div class="mb-3">
                            <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Reset Password</button>
                        </div>
                    </form>
                    <hr>
                    <p class="text-center">
                        <a href="/student/login#forgot-password-panel" class="text-decoration-none">Request new OTP?</a> |
                        <a href="/student/login" class="text-decoration-none">Back to Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../../partials/footer') %>
