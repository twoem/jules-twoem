<%- include('../../partials/navbar') %>

<main class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="py-5">
                <h1 class="display-1 text-primary fw-bold">404</h1>
                <h2 class="mb-4">Oops! Page Not Found.</h2>
                <p class="lead text-muted mb-4">
                    We're sorry, but the page you were looking for doesn't exist, might have been removed, had its name changed, or is temporarily unavailable.
                </p>
                <div class="d-flex justify-content-center">
                    <a href="/" class="btn btn-primary btn-lg me-2">
                        <i class="fas fa-home me-2"></i>Go to Homepage
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </a>
                </div>
            </div>

            <!-- Optional: Simple graphic/SVG -->
