<%- include('../partials/header', { title: 'Gallery' }) %>
<%- include('../partials/navbar') %>

<main class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="mb-4">Gallery</h1>
            <p class="lead">A showcase of our work, events, and the services we are proud to offer. (Images are placeholders)</p>
        </div>
    </div>

    <div class="row mt-4 g-4">
        <%
        const galleryItems = [
            { imgUrl: "https://via.placeholder.com/400x300.png?text=Quality+Prints", title: "Quality Printing Solutions", tags: ["Printing", "Design", "Brochures"], description: "Vibrant and professional printing for all your business and personal needs." },
            { imgUrl: "https://via.placeholder.com/400x300.png?text=Computer+Class", title: "Empowering Through Education", tags: ["Education", "Computer Skills", "Community"], description: "Our students gaining hands-on experience in one of our computer training sessions." },
            { imgUrl: "https://via.placeholder.com/400x300.png?text=Office+Support", title: "Efficient Office Services", tags: ["Office Support", "CV Writing", "Productivity"], description: "Providing reliable office support services to help you succeed." },
            { imgUrl: "https://via.placeholder.com/400x300.png?text=Fast+Internet", title: "Reliable Internet Access", tags: ["Internet", "WiFi", "Connectivity"], description: "Stay connected with our high-speed internet and cyber cafe services." },
            { imgUrl: "https://via.placeholder.com/400x300.png?text=Gov+Service+Help", title: "Government Service Assistance", tags: ["eCitizen", "Support", "KRA"], description: "Simplifying your access to essential government services online." },
            { imgUrl: "https://via.placeholder.com/400x300.png?text=Twoem+Teamwork", title: "Dedicated to Our Community", tags: ["Team", "Service", "Twoem"], description: "The Twoem Online team is committed to providing excellent service." }
        ];
        %>

        <% galleryItems.forEach(function(item) { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm gallery-card">
                    <img src="<%= item.imgUrl %>" class="card-img-top" alt="<%= item.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= item.title %></h5>
                        <p class="card-text small text-muted"><%= item.description %></p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <% item.tags.forEach(function(tag) { %>
                            <span class="badge bg-primary me-1"><%= tag %></span>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Add more gallery items or pagination as needed -->
</main>

<%- include('../partials/footer') %>
